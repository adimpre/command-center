<?xml version="1.0" encoding="utf-8"?>
<configdata>
	<nav>
		<home>
			<label>Flux d'activités</label>
			<controller>index</controller>
		</home>
        <users>
            <label>Gestion des utilisateurs</label>
            <controller>users</controller>
            <pages>
                <navheader1>
                    <label>Liste des utilisateurs</label>
                    <uri>navheader</uri>
                </navheader1>
                <list_all>
                    <label>Voir tout</label>
                    <controller>users</controller>
                    <action>list</action>
                    <pages>
                        <edit-user>
                            <label>[NOM_USER]</label>
                            <controller>users</controller>
                            <action>edit-user</action>
                            <params>
                                <ref>users</ref>
                            </params>
                        </edit-user>
                    </pages>
                </list_all>
                <list_group>
                    <label>Voir par groupe</label>
                    <controller>users</controller>
                    <action>list-groups</action>
                    <pages>
                        <edit-user>
                            <label>[NOM_USER]</label>
                            <controller>users</controller>
                            <action>edit-user</action>
                            <params>
                                <ref>groups</ref>
                            </params>
                        </edit-user>
                    </pages>
                </list_group>
                <navheader2>
                    <label>Actions sur les utilisateurs</label>
                    <uri>navheader</uri>
                </navheader2>
                <add>
                    <label>Ajout d'un utilisateur</label>
                    <controller>users</controller>
                    <action>add-user</action>
                </add>
                <acl>
                    <label>Gestion des droits d'accès aux applications</label>
                    <controller>users</controller>
                    <action>acl</action>
                </acl>
                <navheader3>
                    <label>Gestion des groupes</label>
                    <uri>navheader</uri>
                </navheader3>
                <groups>
                    <label>Voir les groupes existants</label>
                    <controller>users</controller>
                    <action>groups</action>
                    <pages>
                        <edit-group>
                            <label>[NOM_GROUPE]</label>
                            <controller>users</controller>
                            <action>edit-group</action>
                        </edit-group>
                    </pages>
                </groups>
                <add-group>
                    <label>Ajouter un groupe d'utilisateurs</label>
                    <controller>users</controller>
                    <action>add-group</action>
                </add-group>
            </pages>
        </users>
        <applications>
            <label>Gestion des applications</label>
            <controller>applications</controller>
           <pages>
                <navheader1>
                    <label>Liste des applications</label>
                    <uri>navheader</uri>
                </navheader1>
                <list>
                    <label>Voir par groupe</label>
                    <controller>applications</controller>
                    <action>list</action>
                    <pages>
                        <edit-application>
                            <label>[NOM_APPLICATION]</label>
                            <controller>applications</controller>
                            <action>edit-application</action>
                        </edit-application>
                    </pages>
                </list>
                <navheader2>
                    <label>Actions sur les applications</label>
                    <uri>navheader</uri>
                </navheader2>
                <add>
                    <label>Ajout d'une application</label>
                    <controller>applications</controller>
                    <action>add-application</action>
                </add>
                <navheader3>
                    <label>Gestion des groupes</label>
                    <uri>navheader</uri>
                </navheader3>
                <groups>
                    <label>Voir les groupes existants</label>
                    <controller>applications</controller>
                    <action>groups</action>
                    <pages>
                        <edit-group>
                            <label>[NOM_APPLICATION_GROUPE]</label>
                            <controller>applications</controller>
                            <action>edit-group</action>
                        </edit-group>
                    </pages>
                </groups>
                <add-group>
                    <label>Ajouter un groupe d'applications</label>
                    <controller>applications</controller>
                    <action>add-group</action>
                </add-group>
            </pages>
