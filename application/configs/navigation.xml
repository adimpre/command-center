<?xml version="1.0" encoding="utf-8"?>
<configdata>

	<nav>
		<home>
			<label>Flux d'activités</label>
			<controller>index</controller>
		</home>
        <users>
            <label>Gestion des utilisateurs</label>
            <controller>users</controller>
            <pages>
                <navheader1>
                    <label>Liste des utilisateurs</label>
                    <uri>navheader</uri>
                </navheader1>
                <list_all>
                    <label>Voir tout</label>
                    <controller>users</controller>
                    <action>list</action>
                </list_all>
                <list_group>
                    <label>Voir par groupe</label>
                    <controller>users</controller>
                    <action>groups</action>
                </list_group>
                <navheader2>
                    <label>Actions sur les utilisateurs</label>
                    <uri>navheader</uri>
                </navheader2>
                <add>
                    <label>Ajout d'un utilisateur</label>
                    <controller>users</controller>
                    <action>add</action>
                </add>
                <acl>
                    <label>Gestion des droits d'accès aux applications</label>
                    <controller>users</controller>
                    <action>acl</action>
                </acl>
                <navheader3>
                    <label>Paramétrages</label>
                    <uri>navheader</uri>
                </navheader3>
                <ldap>
                    <label>Paramétrage de la connexion LDAP</label>
                    <controller>users</controller>
                    <action>ldap</action>
                </ldap>
            </pages>
        </users>
        <applications>
            <label>Gestion des applications</label>
            <controller>applications</controller>
        </applications>
	</nav>
    
    <user_nav>
        <user>
            <label>[NOM_UTILISATEUR]</label>
            <uri>#</uri>
            <pages>
                <view>
                    <label>Voir mon profil</label>
                    <controller>user</controller>
                    <action>index</action>
                </view>
                <calendar>
                    <label>Voir mon emploi du temps</label>
                    <uri>https://mail.sdis62.fr/owa/?cmd=contents&amp;module=calendar&amp;view=weekly</uri>
                </calendar>
                <edit>
                    <label>Modifier mes informations</label>
                    <controller>user</controller>
                    <action>edit</action>
                </edit>
                <divider>
                    <uri>divider</uri>
                </divider>
                <logout>
                    <label>Se déconnecter</label>
                    <controller>authentication</controller>
                    <action>logout</action>
                </logout>
            </pages>
        </user>
        <login>
            <label>Se connecter</label>
            <controller>authentication</controller>
            <action>login</action>
        </login>
    </user_nav>
    
</configdata>